function WindowObj:NewSection(secTitle)
    local SectionObj = {}

    -- 1. Create a Frame to hold this specific section's contents
    local SectionFrame = Instance.new("Frame")
    SectionFrame.Name = secTitle .. "_Section"
    SectionFrame.BackgroundTransparency = 1
    SectionFrame.Size = UDim2.new(1, 0, 0, 0) -- Height will auto-adjust
    SectionFrame.Parent = Container

    -- 2. Add a layout to the section frame so buttons stack inside it
    local SectionLayout = Instance.new("UIListLayout")
    SectionLayout.Padding = UDim.new(0, 5)
    SectionLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
    SectionLayout.Parent = SectionFrame
    
    -- Auto-resize the section frame based on how many buttons are inside
    SectionLayout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
        SectionFrame.Size = UDim2.new(1, 0, 0, SectionLayout.AbsoluteContentSize.Y + 10)
    end)

    -- 3. The Section Title
    local SecLabel = Instance.new("TextLabel")
    SecLabel.Size = UDim2.new(1, -10, 0, 25)
    SecLabel.Text = "-- " .. secTitle .. " --"
    SecLabel.TextColor3 = Color3.fromRGB(150, 150, 150)
    SecLabel.BackgroundTransparency = 1
    SecLabel.Font = Enum.Font.SourceSansBold
    SecLabel.TextSize = 14
    SecLabel.Parent = SectionFrame -- Parented to the SectionFrame!

    -- 4. Updated CreateButton to parent to the SectionFrame
    function SectionObj:CreateButton(text, callback)
        local Button = Instance.new("TextButton")
        Button.Size = UDim2.new(1, -10, 0, 30)
        Button.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
        Button.Text = text
        Button.TextColor3 = Color3.new(1, 1, 1)
        Button.Parent = SectionFrame -- Parented to the SectionFrame!
        
        Instance.new("UICorner", Button).CornerRadius = UDim.new(0, 6)
        Button.MouseButton1Click:Connect(function() task.spawn(callback) end)
    end

    -- [Repeat this pattern for CreateToggle and CreateSlider, changing .Parent = Container to .Parent = SectionFrame]

    return SectionObj
end
